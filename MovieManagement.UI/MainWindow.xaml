<Window x:Class="MovieManagement.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Manager" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="628*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" Grid.ColumnSpan="3">
            <TextBox x:Name="SearchBox"
            Width="200"
            Margin="0,0,5,0"
            VerticalAlignment="Center" />
            <Button Content="Search" Margin="0,0,5,0" Click="Search_Click"/>
            <Button Content="Sort by Title" Margin="0,0,5,0" Click="SortTitle_Click"/>
            <Button Content="Sort by Year" Margin="0,0,5,0" Click="SortYear_Click"/>
            <Button Content="Import…" Margin="0,0,5,0" Click="Import_Click"/>
            <Button Content="Export…" Click="Export_Click"/>
        </StackPanel>

        <!-- Data grid -->
        <DataGrid x:Name="MoviesGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MovieId}" Width="80"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Director" Binding="{Binding Director}" Width="120"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="100"/>
                <DataGridTextColumn Header="Year" Binding="{Binding ReleaseYear}" Width="80"/>
                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
